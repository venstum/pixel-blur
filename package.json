{
  "name": "pixel-blur",
  "version": "0.1.0",
  "private": true,
  "description": "Interactive image workspace for blur, magnify, and sticker overlays.",
  "author": "venstum",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "dev:electron": "ELECTRON_RUN_AS_NODE= env -u ELECTRON_RUN_AS_NODE concurrently -k \"bun run dev\" \"env -u ELECTRON_RUN_AS_NODE ./node_modules/.bin/electron .\"",
    "build": "next build",
    "build:desktop": "next build && node node_modules/electron-builder/out/cli/cli.js -l AppImage",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "next": "16.0.10",
    "react": "19.2.1",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.pixelblur.app",
    "productName": "pixel-blur",
    "icon": "public/icon.png",
    "asar": false,
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json",
      "next.config.*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics",
      "artifactName": "pixel-blur-${version}.${ext}"
    }
  }
}
